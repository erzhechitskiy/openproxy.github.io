*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html, body, #map-container
    font-family: 'Lato', sans-serif
    font-weight: 300
    margin: 0
    padding: 0
    height: 100%

.veil
    opacity: 0.5
    background: #fff
    width: 100%
    height: 100%
    z-index: 10
    top: 0
    left: 0
    position: fixed
    .center
        position: fixed
        top: 50%
        left: 50%

.nobr
    white-space: nowrap

.bb-container
    pointer-events: none
    position: absolute
    z-index: 9999
    .bb
        pointer-events: auto
        display: table
        margin-top: 3px
        text-align: center
        padding: 10px
        background-color: #fff

        border-left: 3px solid #a00
        border-right: 1px solid #f6f6f6
        border-top-right-radius: 2px
        border-bottom-right-radius: 2px
        -webkit-box-shadow: rgba(0, 0, 0, 0.298039) 0px 1px 4px -1px
        box-shadow: rgba(0, 0, 0, 0.298039) 0px 1px 4px -1px

#logo
    letter-spacing: 0.3em
    font-weight: 400
    cursor: default

.hint
    display: block
    font-size: small

a.icon
    color: #666
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    transition: all 0.3s
    &:hover
        color: #999

.btn
    border: none
    font-family: inherit
    font-size: inherit
    background: none
    cursor: pointer
    text-transform: uppercase
    letter-spacing: 1px
    outline: none
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    transition: all 0.3s

.btn-yellow
    background: #fcad26
    color: #fff
    &:hover
        background: #f29e0d
    &:active
        background: #f58500

#btn-activate
    width: 100%
    height: 36px
    margin-top: 2px
    margin-bottom: 3px
