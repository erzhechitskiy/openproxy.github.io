*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html
    font-family: 'Lato', sans-serif
    font-weight: 300

html, body, #application-container, #map-container
    margin: 0
    padding: 0
    height: 100%

body
    background-color: #f5f5f5

#map-container
    // using for tiles same color as for body
    background-color: #f5f5f5 !important

.vhc-container
    position: relative;
    height: 100%
    margin: 0
    padding: 0
    .vhc
        position: absolute;
        width: 50%;
        height: 50%;
        overflow: auto;
        margin: auto;
        top: 0; left: 0; bottom: 0; right: 0;

.veil
    background: rgba(255, 255, 255, 0.5)
    width: 100%
    height: 100%
    z-index: 10
    top: 0
    left: 0
    position: fixed
    .center
        position: fixed
        top: 50%
        left: 50%

.bb-container
    pointer-events: none
    position: absolute
    z-index: 9999
    .bb
        pointer-events: auto
        display: table
        margin-top: 3px
        text-align: center
        padding: 10px
        background-color: #fff
        border-left: 3px solid #a00
        border-right: 1px solid #f6f6f6
        border-top-right-radius: 2px
        border-bottom-right-radius: 2px
        -webkit-box-shadow: rgba(0, 0, 0, 0.298039) 0px 1px 4px -1px
        box-shadow: rgba(0, 0, 0, 0.298039) 0px 1px 4px -1px
        .bb-divider
            padding: 0 3px
    .bb-compact
        padding: 6px 10px

.logo
    font-family: 'Raleway', sans-serif
    font-weight: 400
    font-size: 20px
    letter-spacing: 0.1em
    cursor: default

.hint
    display: block
    font-size: small

a.icon
    color: #666
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    transition: all 0.3s
    &:hover
        color: #999

.no-js
    #application-container
        display: none

.unsupported-env
    background-color: #a00
    color: #fff
    padding: 8px 6px 12px
    text-align: center
    font-size: 0.875em
    a
        color: #fff

#recovery-container
    text-align: center

#empty-proxy-list
    text-align: center
    margin-bottom: 3px

.selectize-control
    height: 39px

.github-fork-ribbon a,
.github-fork-ribbon a:hover
    font-family: 'Lato', sans-serif
    font-weight: 300
    font-size: 14px
