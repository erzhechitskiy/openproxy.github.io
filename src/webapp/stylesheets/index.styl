*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html, body, #map-container
    font-family: 'Lato', sans-serif
    font-weight: 300
    margin: 0
    padding: 0
    height: 100%

.info-window
    margin-top: 6px
    margin-left: 15px
    margin-bottom: 8px
    table
        border-collapse: collapse
    thead
        th
            padding-bottom: 6px
            font-weight: 500
    tbody
        tr
            border-bottom: 2px solid #fff
            &.proxy-switch:hover
                cursor: pointer
                border-bottom: 2px solid darken(#fff, 9%)
        td
            border: 0
            margin-left: 3px
            margin-right: 3px

.veil
    opacity: 0.5
    background: #fff
    width: 100%
    height: 100%
    z-index: 10
    top: 0
    left: 0
    position: fixed
    .center
        position: fixed
        top: 50%
        left: 50%

.nobr
    white-space: nowrap

.bb-container
    position: absolute
    z-index: 9999
    .bb
        display: table
        margin-top: 3px
        text-align: center
        padding: 10px
        border-left: 3px solid #a00
        background-color: #fff

#logo
    letter-spacing: 0.3em
    font-weight: 400

.hint
    display: block
    font-size: small
